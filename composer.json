{
    "name": "agoat/contao-extendedarticles",
    "type": "contao-bundle",
    "description": "Contao Extented Articles Extension",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Arne Stappen",
            "homepage": "https://github.com/agoat"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/framework-bundle": "~2.8|~3.0",
        "contao/core-bundle": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "conflict": {
        "contao/news-bundle": "*"
    },
    "suggest": {
        "agoat/contao-articleurls": "For nicer urls without the /articles/ keyword"
    },
    "autoload": {
        "psr-4": {
            "Agoat\\ExtendedArticlesBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Agoat\\ExtendedArticlesBundle\\Test\\": "tests/"
        }
    }
}
